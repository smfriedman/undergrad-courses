package studio5;

public class Methods {
	
	/**
	 * Implemented correctly
	 * @param x one thing to add
	 * @param y the other thing to add
	 * @return the sum
	 */
	public static int sum(int x, int y) {
		return x+y;
	}
	
	/**
	 * 
	 * @param x one factor
	 * @param y another factor
	 * @return the product of the factors
	 */
	public static int mpy(int x, int y) {
		return (x*y);  // FIXME
	}
	
	/**
	 * 
	 * @param x
	 * @param y
	 * @param z
	 * @return average as double
	 */
	public static double avg3(int x, int y, int z) {
		return (x + y + z)/3.0;
	}
	
	/**
	 * 
	 * @param a
	 * @return sum
	 */
	public static double sumArray(double[] a) {
		double b = 0.0;
		for (int i = 0; i < a.length; i++){
			b = b + a[i];
		}
		return b;
	}
	
	/**
	 * 
	 * @param a
	 * @return average
	 */
	public static double average(double[] a) {
		return sumArray(a)/a.length;
	}
	
	/**
	 * 
	 * @param a
	 * @return pig latin sort of
	 */
	public static String pig(String a) {
		String b = a.substring(1) + a.substring(0, 1) + "ay";
		return b;
	}
	
	/**
	 * 
	 * @param a
	 * @return maximum
	 */
	public static int max(int[] a) {
		int b = a[0];
		for (int i=0; i<a.length; i++){
			if (a[i] > b) b = a[i];
		}
		return b;
	}
	


}
