package types;

public class DoubleOperations {
	
	public static void main(String args[]) {
		
		double pi = 3.14159;
		System.out.println(pi + 0.4);
		System.out.println(pi * 2);
		
		double avagadro = 6.02e23;
		System.out.println(avagadro / 4);
		
		//What will happen?
		System.out.println("Division by zero: ");
		System.out.println(1.0 / 0.0);
		System.out.println(0.0 / 0.0);
		
		//Be careful with complex expressions:
		
		System.out.println("Complex expressions: ");
		double x = 5.0 + 4.0 + 3.0 / 7.0;
		double y = (5.0 + 4.0 + 3.0) / 7.0;
		
		System.out.println(x);
		System.out.println(y);
		
		//Tips:
		
		//Use parentheses when necessary
		//Draw an expression tree
	}

}
