    private void associate(final RandomPerson randomPerson, final JTextArea jTextArea1) {
        randomPerson.getPCS().addPropertyChangeListener(
                new PropertyChangeListener() {

            @Override
            public void propertyChange(PropertyChangeEvent pce) {
                jTextArea1.append("" + randomPerson + ": " + pce.getPropertyName() +"\n");
                jTextArea1.setCaretPosition(jTextArea1.getDocument().getLength());
            }
        });

        }



