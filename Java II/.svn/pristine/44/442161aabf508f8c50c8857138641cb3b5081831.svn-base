    private void go(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_go
        PCSDemo demo = new PCSDemo();
        StatusChanger.logging = false;
        RandomPerson[] people = demo.people;
        associate(people[0], jTextArea1);
        associate(people[1], jTextArea2);
        associate(people[2], jTextArea3);
        demo.run();
    }//GEN-LAST:event_go

