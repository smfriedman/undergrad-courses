
public class Pillar {

	Event event;
	int height;
	Node[] tower; //the actual pillar structure itself

	
	public Pillar(Event event, int height){
		this.event = event;
		this.height = height;
		this.tower = new Node[height];
		for(int i = 0; i < height; i++){
//			tower[i] = new Node(this, null, null);
			tower[i] = new Node(this, null);
		}
	}

	
}
